<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toxxic.trainingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.TrainingContentProvider"
            android:authorities="com.toxxic.trainingapp.provider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".CourseDetailsActivity"
            android:label="@string/title_activity_course_details"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.toxxic.trainingapp.intent.action.COURSE_DETAILS"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>

        </activity>
    </application>

</manifest>