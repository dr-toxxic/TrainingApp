<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:columnCount="3"
    android:rowCount="4">

    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:id="@+id/imageView2"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:src="@drawable/ic_menu_slideshow"
        android:layout_weight="0.08"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvCourseTitle"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvCourseDescr"
        android:layout_gravity="left|fill"
        android:layout_row="2"
        android:layout_column="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_column="2"
        android:src="@android:drawable/ic_media_play"
        android:layout_row="0"
        android:layout_gravity="top|center_vertical|fill_vertical"
        android:layout_rowSpan="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tvCourseId"
        android:id="@+id/tvCourseId"
        android:layout_row="3"
        android:layout_column="1"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="tvLessonId"
        android:id="@+id/tvLessonId"
        android:layout_row="3"
        android:layout_column="2"
        android:visibility="visible" />
</GridLayout>